{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**/*.{ts,tsx,js,jsx}",
      "next.config.mjs",
      "next-env.d.ts",
      "firebase.json",
      "package.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": false,
                "source": ["react*", "react/**"]
              },
              {
                "type": false,
                "source": ":PACKAGE:"
              },
              ":BLANK_LINE:",
              {
                "type": false,
                "source": "./lib/**"
              },
              {
                "type": false,
                "source": ":PATH:"
              },
              ":BLANK_LINE:",
              {
                "type": false
              },
              ":BLANK_LINE:",
              {
                "type": true
              }
            ]
          }
        }
      }
    }
  }
}
